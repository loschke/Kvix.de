				<span
					class="text-xl font-medium tracking-wide text-white/90 hover:text-white transition-colors duration-300"
					>Hi, ich Rico</span
				>
			</div>

			<!-- Navigation and Social Icons -->
			<div class="flex items-center">
				<!-- Navigation Menu -->
				<nav class="flex gap-10 mr-16">
					<a
						href="/about"
						class="text-white/70 hover:text-white transition-colors duration-300 text-lg font-medium tracking-wide"
					>
						About
					</a>
					<a
						href="/projekte"
						class="text-white/70 hover:text-white transition-colors duration-300 text-lg font-medium tracking-wide"
					>
						Projekte
					</a>
					<a
						href="/blog"
						class="text-white/70 hover:text-white transition-colors duration-300 text-lg font-medium tracking-wide"
