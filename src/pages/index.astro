---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<div class="min-h-screen relative bg-base text-white">
		<!-- Top Navigation Bar -->
		<div
			class="fixed top-0 inset-x-0 px-8 py-6 flex justify-between items-center"
		>
			<!-- Profile Logo -->
			<div class="flex items-center gap-4">
				<div
					class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center text-white text-lg font-bold shadow-lg"
				>
					R
